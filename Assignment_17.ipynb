    "# letter counter \n",
    "harfler =[]\n",
    "adet = []\n",
    "sentence= input(\"give me a sentence :\").lower().replace(\" \", \"\")\n",
    "for  i in sentence:\n",
    "    harfler.append(i)\n",
    "\n",
    "for i in sentence:\n",
    "    tekrar = harfler.count(i)\n",
    "    adet.append(tekrar)\n",
    "dict(zip(harfler,adet))"
   ]
